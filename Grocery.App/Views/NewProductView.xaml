<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:m="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.NewProductView"
             x:DataType="vm:NewProductViewModel"
             Title="NewProductView">
			
	<Shell.TitleView>
        <Grid>
            <Label Text="Product toevoegen" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>
	
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Naam product" />
        <Entry Placeholder="Naam"
               Text="{Binding ProductName}"
               Keyboard="Default"
               MaxLength="50" />
	    <Button Text="Add"
            Command="{Binding AddProductCommand}"
            Padding="10"
            CornerRadius="8" />
    </VerticalStackLayout>

</ContentPage>